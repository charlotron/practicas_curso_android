<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
	android:layout_centerHorizontal="true"
	tools:context=".ShopDetailActivity"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" 
    >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin_big"
	    android:paddingLeft="@dimen/activity_horizontal_margin_big"
	    android:paddingRight="@dimen/activity_horizontal_margin_big"
	    android:paddingTop="@dimen/activity_vertical_margin_big" >

	    <TextView
	        android:id="@+id/descTitleShop"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/activity_vertical_margin"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TextView
	        android:id="@+id/descDirShop"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />

	    <TextView
	        android:id="@+id/descTlfShop"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />

	    <TextView
	        android:id="@+id/descTimesInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/activity_vertical_margin"
	        android:layout_marginTop="@dimen/activity_vertical_margin"
	        android:text="@string/descTimes"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/descTimes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />

	    <TextView
	        android:id="@+id/descWeb"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/activity_vertical_margin"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/descEmail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/activity_vertical_margin"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	</LinearLayout>
	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:paddingBottom="@dimen/activity_vertical_margin_big"
		    android:paddingLeft="@dimen/activity_horizontal_margin_big"
		    android:paddingRight="@dimen/activity_horizontal_margin_big"
		    android:paddingTop="@dimen/activity_vertical_margin_big" >

		<ImageButton
		    android:id="@+id/galButton"
		    android:layout_width="167dp"
		    android:layout_height="158dp"
		   	android:paddingBottom="@dimen/activity_vertical_margin_big" 
		   	android:contentDescription="@string/gallery_button"
		    android:src="@drawable/photo_gallery" />

		

	</LinearLayout>

	<Button
	    android:id="@+id/callButton"
	    style="@style/btnStyleBlack"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="20dp"
	    android:text="@string/call_button" />

</RelativeLayout>

